<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/high_score"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="HIGH SCORES"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="-18dp"
        android:id = "@+id/highscoretxt2"/>

    <LinearLayout
        android:layout_width="287dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/high_score_own"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="YOUR SCORE"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold"
            android:id = "@+id/txtyourscore"
            android:layout_marginTop="12dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textColor="#63A744"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id = "@+id/txtyourscore2"
            android:layout_marginTop="0dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="287dp"
        android:layout_height="330dp"
        android:orientation="vertical"
        android:background="@drawable/high_score_global"
        android:layout_gravity="center"
        android:layout_marginTop="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="TOP SCORES"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginTop="13dp"
            android:id = "@+id/topscorestxt"/>
        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:text="NAME"
                android:textStyle="bold"
                android:id="@+id/textView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="25dp"
                android:textColor="#FFFFFF"
                android:gravity="left"
                android:layout_marginLeft="15dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:text="SCORE"
                android:textStyle="bold"
                android:id="@+id/textView2"
                android:layout_alignTop="@+id/textView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="#FFFFFF"
                android:gravity="right"
                android:layout_marginRight="15dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:text=""
                android:id="@+id/textView3"
                android:layout_below="@+id/textView"
                android:layout_alignRight="@+id/textView"
                android:layout_alignEnd="@+id/textView"
                android:textColor="#FFFFFF"
                android:gravity="left"
                android:layout_marginLeft="15dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:text=""
                android:id="@+id/textView4"
                android:layout_below="@+id/textView2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="#63A744"
                android:gravity="right"
                android:layout_marginRight="15dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:text=""
                android:id="@+id/textView5"
                android:layout_below="@+id/textView3"
                android:layout_alignRight="@+id/textView3"
                android:layout_alignEnd="@+id/textView3"
                android:textColor="#FFFFFF"
                android:gravity="left"
                android:layout_marginLeft="15dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:text=""
                android:id="@+id/textView6"
                android:layout_below="@+id/textView4"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignStart="@+id/textView4"
                android:textColor="#63A744"
                android:gravity="right"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:text=""
                android:id="@+id/textView7"
                android:layout_below="@+id/textView5"
                android:layout_alignRight="@+id/textView5"
                android:layout_alignEnd="@+id/textView5"
                android:textColor="#FFFFFF"
                android:gravity="left"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:text=""
                android:id="@+id/textView8"
                android:layout_below="@+id/textView6"
                android:layout_alignLeft="@+id/textView6"
                android:layout_alignStart="@+id/textView6"
                android:textColor="#63A744"
                android:gravity="right"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:text=""
                android:id="@+id/textView9"
                android:layout_below="@+id/textView7"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#FFFFFF"
                android:gravity="left"
                android:layout_marginLeft="15dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:text=""
                android:id="@+id/textView10"
                android:layout_below="@+id/textView8"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="#63A744"
                android:gravity="right"
                android:layout_marginRight="15dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:text=""
                android:id="@+id/textView11"
                android:layout_below="@+id/textView9"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#FFFFFF"
                android:gravity="left"
                android:layout_marginLeft="15dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:text=""
                android:id="@+id/textView12"
                android:layout_below="@+id/textView10"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="#63A744"
                android:gravity="right"
                android:layout_marginRight="15dp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp">

            <Button
                android:layout_width="68dp"
                android:layout_height="26dp"
                android:background="@drawable/previous_button"
                android:text="previous"
                android:textColor="#FFFFFF"
                android:textSize="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="-10dp"
                android:paddingBottom="3dp"
                android:id = "@+id/bprevious"/>
            <Button
                android:layout_width="65dp"
                android:layout_height="25dp"
                android:background="@drawable/next_button"
                android:text="next"
                android:textColor="#FFFFFF"
                android:textSize="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="55dp"
                android:paddingBottom="3dp"
                android:id= "@+id/bnext"/>
        </LinearLayout>

    </LinearLayout>



    <Button
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:background="@drawable/back_button"
        android:id = "@+id/hghback"
        android:layout_gravity="center"/>

</LinearLayout>