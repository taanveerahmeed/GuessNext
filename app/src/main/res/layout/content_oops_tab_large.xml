<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/oops">

    <LinearLayout
        android:layout_width="680dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="450dp"
        android:background="@drawable/oops_content"
        android:weightSum="1">
        <TextView
            android:layout_width="450dp"
            android:layout_height="120dp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:text="no internet connection!\nplease check your data settings."
            android:gravity="center"
            android:textSize="35dp"
            android:paddingBottom="7dp"
            android:layout_marginLeft="45dp"
            android:layout_weight="0.78"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />
    </LinearLayout>


    <Button
        android:layout_width="460dp"
        android:layout_height="150dp"
        android:background="@drawable/update_button"
        android:layout_gravity="center"
        android:paddingBottom="12dp"
        android:layout_marginTop="50dp"
        android:textSize="35dp"
        android:textColor="#FFFFFF"
        android:text="retry"
        android:id = "@+id/bretry"
        android:layout_marginLeft="-10dp" />

    <Button
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:background="@drawable/exit_button"
        android:layout_gravity="center"
        android:layout_marginTop="230dp"
        android:id = "@+id/bexit"/>



</LinearLayout>