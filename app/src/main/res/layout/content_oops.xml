<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/oops">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="205dp"
        android:background="@drawable/oops_content">
        <TextView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:text="no internet connection!\nplease check your data settings."
            android:gravity="center"
            android:textSize="15dp"
            android:paddingBottom="7dp"
            android:layout_marginLeft="25dp" />
    </LinearLayout>


    <Button
        android:layout_width="207dp"
        android:layout_height="67dp"
        android:background="@drawable/update_button"
        android:layout_gravity="center"
        android:paddingBottom="12dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:text="retry"
        android:id = "@+id/bretry"/>

    <Button
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:background="@drawable/exit_button"
        android:layout_gravity="center"
        android:layout_marginTop="92dp"
        android:id = "@+id/bexit"/>



</LinearLayout>