<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/oops">

    <LinearLayout
        android:layout_width="490dp"
        android:layout_height="135dp"
        android:layout_gravity="center"
        android:layout_marginTop="340dp"
        android:background="@drawable/oops_content"
        android:weightSum="1">
        <TextView
            android:layout_width="270dp"
            android:layout_height="95dp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:text="no internet connection!\nplease check your data settings."
            android:gravity="center"
            android:textSize="27dp"
            android:paddingBottom="7dp"
            android:layout_marginLeft="25dp"
            android:layout_weight="0.78"
            android:paddingLeft="10dp" />
    </LinearLayout>


    <Button
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:background="@drawable/update_button"
        android:layout_gravity="center"
        android:paddingBottom="12dp"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:text="retry"
        android:id = "@+id/bretry"
        android:layout_marginLeft="-10dp" />

    <Button
        android:layout_width="175dp"
        android:layout_height="80dp"
        android:background="@drawable/exit_button"
        android:layout_gravity="center"
        android:layout_marginTop="160dp"
        android:id = "@+id/bexit"/>



</LinearLayout>