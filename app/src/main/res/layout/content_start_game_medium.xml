<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="@drawable/game_play"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="15dp">


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp">

        <LinearLayout
            android:layout_width="25dp"
            android:layout_height="20dp"></LinearLayout>

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="SCORE:"
            android:textColor="#FFFFFF"
            android:textSize="13dp"
            android:gravity="left"
            android:id = "@+id/scr"

            android:layout_marginTop="-1dp"
            android:layout_marginLeft="-2dp" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:text="0"
            android:textColor="#63A744"
            android:textSize="13dp"
            android:gravity="left"
            android:id = "@+id/score"
            android:layout_marginTop="-1dp"
            android:layout_marginLeft="-1dp" />

        <LinearLayout
            android:layout_width="25dp"
            android:layout_height="20dp"></LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: "
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:id = "@+id/tm"

            android:layout_marginTop="-1dp"
            android:layout_marginLeft="-25dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00.00.00"
            android:textColor="#63A744"
            android:gravity="center"
            android:id = "@+id/timer"
            android:layout_marginTop="-1dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="22dp"
            android:layout_height="30dp"
            android:layout_marginRight="-5dp"></LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="29dp"
            android:src="@drawable/heart_life"
            android:id= "@+id/lifeone"
            android:layout_marginTop="13dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/heart_life"
            android:id= "@+id/lifetwo"
            android:layout_marginTop="13dp" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/heart_life"
            android:id= "@+id/lifethree"
            android:layout_marginTop="13dp" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/heart_life"
            android:id= "@+id/lifefour"
            android:layout_marginTop="13dp" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/heart_life"
            android:id= "@+id/lifefive"
            android:layout_marginTop="13dp" />

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="30dp"></LinearLayout>

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/counter_bg"
            android:gravity="center"
            android:layout_marginTop="-2dp"
            android:layout_marginLeft="5dp"
            android:id = "@+id/countertxt"
            android:textColor="#FFFFFF"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="285dp"
        android:layout_height="105dp"
        android:background="@drawable/question_box"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-10dp">
        <TextView
            android:layout_width="255dp"
            android:layout_height="60dp"
            android:id = "@+id/question"
            android:layout_gravity="center"
            android:text=""
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFFFFF"
            android:textSize="15dp"


            android:layout_marginLeft="15dp"
            android:layout_marginTop="-10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="8dp"></LinearLayout>

    <LinearLayout
        android:layout_width="283dp"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@drawable/answer_regular"
        android:layout_marginLeft="18dp"
        android:weightSum="1"
        android:id = "@+id/layoutA"
        android:layout_marginTop="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="15dp"
            android:id = "@+id/ansa"/>


        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"

            android:text=""
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:id = "@+id/optionA"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="4dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="4dp"></LinearLayout>

    <LinearLayout
        android:layout_width="283dp"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@drawable/answer_regular"
        android:layout_marginLeft="18dp"
        android:weightSum="1"
        android:id = "@+id/layoutB"
        android:layout_marginTop="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="15dp"
            android:id = "@+id/ansb"/>


        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text=""
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:id = "@+id/optionB"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="4dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="4dp"></LinearLayout>

    <LinearLayout
        android:layout_width="283dp"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@drawable/answer_regular"
        android:layout_marginLeft="18dp"
        android:weightSum="1"
        android:id = "@+id/layoutC"
        android:layout_marginTop="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="15dp"
            android:id = "@+id/ansc"/>


        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text=""
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:id = "@+id/optionC"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="4dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="12dp"></LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">


        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:text="A"
            android:background="@drawable/btn_regular"
            android:textSize="40dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"

            android:id = "@+id/buttonA"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="-3dp" />

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:text="B"
            android:background="@drawable/btn_regular"
            android:textSize="40dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"

            android:id = "@+id/buttonB"
            android:layout_marginTop="4dp" />

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/btn_regular"
            android:text="C"
            android:textSize="40dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"

            android:id = "@+id/buttonC"
            android:layout_marginTop="4dp" />

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/btn_heart"
            android:textSize="50dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:id = "@+id/buttonLife"
            android:layout_marginTop="12dp"
            android:layout_marginRight="0dp" />

    </LinearLayout>

    <Button
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:background="@drawable/back_button"
        android:layout_marginTop="22dp"
        android:id = "@+id/back"/>


</LinearLayout>
