<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/oops">

    <LinearLayout
        android:layout_width="274dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="195dp"
        android:background="@drawable/oops_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:text="no internet connection!\nplease check your data settings."
            android:gravity="center"
            android:textSize="15dp"
            android:paddingBottom="7dp"
            android:layout_marginLeft="25dp" />
    </LinearLayout>


    <Button
        android:layout_width="188dp"
        android:layout_height="65dp"
        android:background="@drawable/update_button"
        android:layout_gravity="center"
        android:paddingBottom="8dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:text="retry"
        android:id = "@+id/bretry"
        android:layout_marginLeft="-5dp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@drawable/exit_button"
        android:layout_gravity="center"
        android:layout_marginTop="98dp"
        android:id = "@+id/bexit"/>



</LinearLayout>