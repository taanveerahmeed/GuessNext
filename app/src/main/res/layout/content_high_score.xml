<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/high_score"
    >
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="HIGH SCORES"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="-18dp"
        android:id = "@+id/highscoretxt2"/>

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/high_score_own"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="YOUR SCORE"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id = "@+id/txtyourscore"
            android:layout_marginTop="12dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textColor="#63A744"
            android:textSize="17dp"
            android:textStyle="bold"
            android:id = "@+id/txtyourscore2"
            android:layout_marginTop="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="340dp"
        android:orientation="vertical"
        android:background="@drawable/high_score_global"
        android:layout_gravity="center"
        android:layout_marginTop="-7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="TOP SCORES"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginTop="13dp"
            android:id = "@+id/topscorestxt"/>
       <RelativeLayout
           android:layout_width="290dp"
           android:layout_height="255dp"
           android:layout_gravity="center"
           android:layout_marginTop="-10dp">

           <TextView
               android:layout_width="110dp"
               android:layout_height="35dp"
               android:text="NAME"
               android:textStyle="bold"
               android:id="@+id/textView"
               android:layout_alignParentTop="true"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:layout_marginTop="25dp"
               android:textColor="#FFFFFF"
               android:gravity="left"
               android:layout_marginLeft="20dp" />

           <TextView
               android:layout_width="110dp"
               android:layout_height="35dp"
               android:text="SCORE"
               android:textStyle="bold"
               android:id="@+id/textView2"
               android:layout_alignTop="@+id/textView"
               android:layout_alignParentRight="true"
               android:layout_alignParentEnd="true"
               android:textColor="#FFFFFF"
               android:gravity="right"
               android:layout_marginRight="20dp" />

           <TextView
               android:layout_width="110dp"
               android:layout_height="35dp"
               android:text=""
               android:id="@+id/textView3"
               android:layout_below="@+id/textView"
               android:layout_alignRight="@+id/textView"
               android:layout_alignEnd="@+id/textView"
               android:textColor="#FFFFFF"
               android:gravity="left"
               android:layout_marginLeft="20dp" />

           <TextView
               android:layout_width="110dp"
               android:layout_height="35dp"
               android:text=""
               android:id="@+id/textView4"
               android:layout_below="@+id/textView2"
               android:layout_alignParentRight="true"
               android:layout_alignParentEnd="true"
               android:textColor="#63A744"
               android:gravity="right"
               android:layout_marginRight="20dp" />

           <TextView
               android:layout_width="110dp"
               android:layout_height="35dp"
               android:text=""
               android:id="@+id/textView5"
               android:layout_below="@+id/textView3"
               android:layout_alignRight="@+id/textView3"
               android:layout_alignEnd="@+id/textView3"
               android:textColor="#FFFFFF"
               android:gravity="left"
               android:layout_marginLeft="20dp" />

           <TextView
               android:layout_width="110dp"
               android:layout_height="35dp"
               android:text=""
               android:id="@+id/textView6"
               android:layout_below="@+id/textView4"
               android:layout_alignLeft="@+id/textView4"
               android:layout_alignStart="@+id/textView4"
               android:textColor="#63A744"
               android:gravity="right"/>

           <TextView
               android:layout_width="110dp"
               android:layout_height="35dp"
               android:text=""
               android:id="@+id/textView7"
               android:layout_below="@+id/textView5"
               android:layout_alignRight="@+id/textView5"
               android:layout_alignEnd="@+id/textView5"
               android:textColor="#FFFFFF"
               android:gravity="left"/>

           <TextView
               android:layout_width="110dp"
               android:layout_height="35dp"
               android:text=""
               android:id="@+id/textView8"
               android:layout_below="@+id/textView6"
               android:layout_alignLeft="@+id/textView6"
               android:layout_alignStart="@+id/textView6"
               android:textColor="#63A744"
               android:gravity="right"/>

           <TextView
               android:layout_width="110dp"
               android:layout_height="35dp"
               android:text=""
               android:id="@+id/textView9"
               android:layout_below="@+id/textView7"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:textColor="#FFFFFF"
               android:gravity="left"
               android:layout_marginLeft="20dp" />

           <TextView
               android:layout_width="110dp"
               android:layout_height="35dp"
               android:text=""
               android:id="@+id/textView10"
               android:layout_below="@+id/textView8"
               android:layout_alignParentRight="true"
               android:layout_alignParentEnd="true"
               android:textColor="#63A744"
               android:gravity="right"
               android:layout_marginRight="20dp" />

           <TextView
               android:layout_width="110dp"
               android:layout_height="35dp"
               android:text=""
               android:id="@+id/textView11"
               android:layout_below="@+id/textView9"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:textColor="#FFFFFF"
               android:gravity="left"
               android:layout_marginLeft="20dp" />

           <TextView
               android:layout_width="110dp"
               android:layout_height="35dp"
               android:text=""
               android:id="@+id/textView12"
               android:layout_below="@+id/textView10"
               android:layout_alignParentRight="true"
               android:layout_alignParentEnd="true"
               android:textColor="#63A744"
               android:gravity="right"
               android:layout_marginRight="20dp" />
       </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0dp"
            android:layout_gravity="center">

            <Button
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:background="@drawable/previous_button"
                android:text="previous"
                android:textColor="#FFFFFF"
                android:textSize="8dp"
                android:layout_marginTop="-2dp"
                android:layout_marginLeft="0dp"
                android:paddingBottom="3dp"
                android:id = "@+id/bprevious"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:background="@drawable/next_button"
                android:text="next"
                android:textColor="#FFFFFF"
                android:textSize="8dp"
                android:layout_marginTop="-2dp"
                android:layout_marginLeft="58dp"
                android:paddingBottom="3dp"
                android:id= "@+id/bnext"/>
        </LinearLayout>

    </LinearLayout>



    <Button
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@drawable/back_button"
        android:id = "@+id/hghback"
        android:layout_gravity="center"/>

</LinearLayout>